import requests

# Στοιχεία Pushover
USER_KEY = "u82h2gn9zw3boop9534269sa2nxfz2"
API_TOKEN = "auhgpz9i3fphwfe7sztf5nv62evwog "  # Αντικατάστησέ το με το δικό σου Pushover App Token

def send_notification(title, message):
    url = "https://api.pushover.net/1/messages.json"
    data = {
        "token": API_TOKEN,
        "user": USER_KEY,
        "title": title,
        "message": message
    }

    response = requests.post(url, data=data)
    if response.status_code == 200:
        print("Ειδοποίηση στάλθηκε με επιτυχία!")
    else:
        print("Σφάλμα κατά την αποστολή:", response.text)

# Παράδειγμα χρήσης
if __name__ == "__main__":
    send_notification("Raven Alert", "Η αποστολή λειτουργεί σωστά.")
